<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景颜色 -->
    <solid android:color="@android:color/white" />

    <!-- 圆角 -->
    <corners android:radius="8dp" />

    <!-- 内边距 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- 边框 -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" />
</shape>
