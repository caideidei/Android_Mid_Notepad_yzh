            android:layout_margin="4dp"
            android:background="@drawable/img_5"
            android:contentDescription="@null"
            android:onClick="ColorSelect" />
    </LinearLayout>

    <!-- 每一行是一个水平LinearLayout，包含标签和图片 -->
