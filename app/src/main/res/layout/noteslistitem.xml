<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_notesItems"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_background"> <!-- 添加圆角背景 -->

    <!-- 分类标题 -->
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:padding="0dp"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" /> <!-- 添加间距 -->

<!--    &lt;!&ndash; 分割线 &ndash;&gt;-->
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="#E0E0E0"-->
<!--        android:layout_marginTop="4dp"-->
<!--        android:layout_marginBottom="4dp" />-->

    <!-- 主内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <!-- 文本内容 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="4dp"
                android:id="@+id/tv_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017/4/25 16:25:30"
                android:textSize="14sp"
                android:textColor="#666666"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/tv_data" />
        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 编辑按钮 -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Edit Note"
                android:id="@+id/iv_editNote"
                android:background="@android:color/transparent" />

            <!-- 删除按钮 -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Delete Note"
                android:id="@+id/iv_deleteNote"
                android:src="@drawable/delete"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
